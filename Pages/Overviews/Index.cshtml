@page "/"
@model Proiect_MPD.Pages.Overviews.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Overview[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Overview[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Overview[0].Varsta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Overview[0].Categorie.CategorieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Overview[0].Cursa.CursaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Overview[0].Locatie.LocatieName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Overview) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Varsta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorie.CategorieName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cursa.CursaName)
                </td>
    <td>
                    @Html.DisplayFor(modelItem => item.Locatie.LocatieName)
                    </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
